{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "ES6",
    "target": "ES2015",
    "allowJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "webpack-env",
    ]
  },
  "include": [
    "src",
    "src/declaration.d.ts"
  ],
}
